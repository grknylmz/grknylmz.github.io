<mvc:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" controllerName="ems.UI5Showcase.controller.signature.SignaturePad" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:l="sap.ui.layout">
	<Page title="{i18n>signaturePad}" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<Panel>
				<FlexBox alignItems="Start" justifyContent="Center">
					<items>
						<FlexBox direction="Column" alignItems="Start">
							<items>
								<VBox>
									<core:HTML id="html">
									</core:HTML>
								</VBox>
								<VBox>
									<HBox>
										<Button id="Signature" text="Signature" press="onSign"></Button>
										<Button id="Save" text="Save" press="saveButton"></Button>
										<Button id="clear" text="Clear" press="clearButton"></Button>
									</HBox>
								</VBox>
							</items>
						</FlexBox>
					</items>
				</FlexBox>
			</Panel>
		</content>
	</Page>
</mvc:View>